<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/round_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="Round "/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:text="Select a player to possess: " />

    <Spinner
        android:id="@+id/spinner_3"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:entries="@array/players_array" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:text="Select a player to frame: " />

    <Spinner
        android:id="@+id/spinner_4"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:entries="@array/players_array" />

    <TextView
        android:id="@+id/Win_Lose_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="50sp"
        android:text=""
        android:enabled="false"/>

    <Button
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave Game"
        android:onClick="ExitMatch" />
</LinearLayout>